<Window x:Class="SMTP_Email_OTP_Registration.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMTP_Email_OTP_Registration"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Button Name="button_confirm" Background="LightGreen" Content="LOGIN" HorizontalAlignment="Left" Margin="35,205,0,0" VerticalAlignment="Top"  Width="240" Height="24" Click="button_confirm_Click"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="35,132,0,0" VerticalAlignment="Top" Height="31" Width="65"/>
        <TextBox x:Name="textbox_username" HorizontalAlignment="Left" Margin="35,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240" Height="20"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="35,76,0,0" VerticalAlignment="Top" Height="31" Width="70"/>
        <PasswordBox x:Name="textbox_password" HorizontalAlignment="Left" Margin="35,163,0,0" VerticalAlignment="Top" Width="240" Height="22"/>
        <Label Content="ACCOUNT LOGIN" FontSize="30" HorizontalAlignment="Left" Margin="30,18,0,0" VerticalAlignment="Top" Height="48" Width="312"/>
    </Grid>
</Window>
